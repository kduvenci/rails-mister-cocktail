<%= render 'navbar' %>
<%= render 'banner' %>



<div class="container">
  <div class="row">
	    <div id="transcroller-body" class="aos-all">
				<% @cocktails.each do |cocktail| %>
    			<div class="col-lg-4">
						<div class="aos-item" data-aos="fade-up">
							<div class="aos-item__inner">
								<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
									<div class="card-category">Popular</div>
									<div class="card-description">
										<h2><%= cocktail.name%></h2>
										<p>Very cool stuff, useful and smart</p>
									</div>
								<a class="card-link" href="<%= cocktail_path(cocktail) %>" ></a>
							</div>				
						</div>
					</div>
    		</div>
			<% end %>
    </div>
  </div>
</div>